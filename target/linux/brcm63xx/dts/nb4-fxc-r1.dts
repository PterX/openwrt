/dts-v1/;

/include/ "bcm6358.dtsi"

/ {
	model = "SFR Neuf Box 4 (Foxconn)";
	compatible = "sfr,nb4-fxc-r1", "brcm,bcm6358";

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;
		debounce-interval = <60>;

		service {
			label = "service";
			gpios = <&gpio0 27 1>;
			linux,code = <0x100>;
		};
		clip {
			label = "clip";
			gpios = <&gpio0 31 1>;
			linux,code = <0x101>;
		};
		reset {
			label = "reset";
			gpios = <&gpio1 2 1>;
			linux,code = <0x198>;
		};
		wps {
			label = "wps";
			gpios = <&gpio1 5 1>;
			linux,code = <0x211>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		traffic_white {
			label = "NB4-FXC-r1:white:traffic";
			gpios = <&gpio0 2 0>;
		};
		service_blue {
			label = "NB4-FXC-r1:blue:service";
			gpios = <&gpio0 4 0>;
		};
		wifi_white {
			label = "NB4-FXC-r1:white:wifi";
			gpios = <&gpio0 15 0>;
		};
		service_red {
			label = "NB4-FXC-r1:red:service";
			gpios = <&gpio0 29 0>;
		};
		service_green {
			label = "NB4-FXC-r1:green:service";
			gpios = <&gpio0 30 0>;
		};
	};
};

&leds0 {
	status = "ok";

	alarm_white {
		reg = <0>;
		active-low;
		label = "NB4-FXC-r1:white:alarm";
	};
	tv_white {
		reg = <2>;
		active-low;
		label = "NB4-FXC-r1:white:tv";
	};
	tel_white {
		reg = <3>;
		active-low;
		label = "NB4-FXC-r1:white:tel";
	};
	adsl_white {
		reg = <4>;
		active-low;
		label = "NB4-FXC-r1:white:adsl";
	};
};
